<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane fx:id="dialogPaneCreateCatalog" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CreateCatalogController">
   <content>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Catalog Name" />
                        <Label layoutX="10.0" layoutY="10.0" text="Attribute" />
                        <Label layoutX="10.0" layoutY="10.0" text="Data Type" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <TextField fx:id="tfCatalogName" />
                        <TextField fx:id="tfAttribute" layoutX="10.0" layoutY="10.0" />
                        <ComboBox fx:id="cbDataType" prefWidth="190.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="btnAddAttribute" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Add Attribute" />
                  <Button fx:id="btnDeleteAttribute" mnemonicParsing="false" text="Delete Attribute" />
               </children>
            </HBox>
            <ListView fx:id="lvAttributeList" prefHeight="200.0" />
            <HBox>
               <children>
                  <Button fx:id="btnCreateMyCatalog" mnemonicParsing="false" text="Create My Catalog" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</DialogPane>
